<!--pages/search_result/search_result.wxml-->
<view>
  <view class="topbox">
    <!-- 按钮筛选 -->
    <view class="row">
       <view class="sx_btn" size="small" bindtap="showPopup">筛选</view>
    </view>
    <!-- 横向滚动条筛选 -->
    <view class="row">
      <scroll-view scroll-x="{{true}}">
          <view class="unit">
              <view class="xxk {{nowmenu == item.e ? 'cur' : ''}}" wx:for="{{filters}}" wx:key="index" bindtap="xxk_tap_han" data-e="{{item.e}}" bindtap="xxk_tapHan" data-e="{{item.e}}">
                  {{item.c}}
              </view>
          </view>
      </scroll-view>
    </view>
    <!-- 横向筛选的菜单 -->
    <wxs src="tool.wxs" module="tool" />
    <view class="menu" wx:if="{{nowmenu != ''}}">
    <!-- catchta阻止冒泡 -->
      <view class="mask" catchtap="close_menu"></view>
      <view class="menu_inner_box">
        <menu_inner nowmenu="{{nowmenu}}" nowo="{{tool.getTheItemInArray(filters,nowmenu)}}" nowv="{{now[nowmenu]}}" bind:cancel="menu_inner_cancelHan" bind:ok="menu_inner_okHan"></menu_inner>
      </view>
    </view>
  <!-- 抽屉 -->
    <i-drawer visible="{{ show }}" bind:close="onClose" mode="right">
      <view style="height:{{windowHeight}}px;width:280px;background:white;">
      <!-- 消亡之后筛选没内容 -->
        <!-- <drawer_inner wx:if="{{isShowDrawer}}" bind:ok="drawer_inner_han" brand="{{brand}}" bind:close="drawer_inner_close_han" filters="{{filters}}"></drawer_inner> -->
        <drawer_inner bind:ok="drawer_inner_han"  bind:close="draw_inner_closeHan" filters="{{filters}}" brand="{{now.brand}}" color="{{now.color}}" fuel="{{now.fuel}}" engine="{{now.engine}}" exhaust="{{now.exhaust}}"></drawer_inner>
      </view>
    </i-drawer>
  </view>
  <!-- 定义小汽车模板 -->
  <template name="car_grid">
    <view class="car_grid">
      <view class="picbox">
         <image class="carpic" src=" http://www.aiqianduan.com:56506/images/carimages/{{item.id}}/view/{{item.img}}"></image>
      </view>
      <view class="wordbox">
        <view>【id】{{item.id}}</view>
        <view>【品牌】{{item.brand}}</view>
        <view>【价格】{{item.price}}</view>
        <view>【颜色】{{item.color}}</view>
        <view>【排放】{{item.exhaust}}</view>
        <view>【燃油】{{item.fuel}}</view>
        <view>【动力】{{item.engine}}</view>
      </view>
    </view>
  </template>
  <!-- 滚动 -->
  <scroll-view scroll-y="{{true}}" style="height:{{windowHeight -61}}px" bindscrolltolower="lowerHandler" lower-threshold="{{140}}">
    <template is="car_grid" wx:for="{{results}}" wx:key="id" data="{{item:item}}"></template>
    <view style="text-algin:center;margin:20px 0px;">数据拉取到底，没有更多了！！！</view>
  </scroll-view>
</view>