.topbox{
  height: 60px;
  border-bottom: 1px solid #ccc;
}
.topbox .row{
  height: 30px;
}
.topbox .row .sx_btn{
  float: right;
  margin: 4px;
  padding: 2px 4px;
  font-size: 14px;
  border: 1px solid #ccc;
}
.unit{
  width: 600px;
  height: 30px;
  padding-left: 20px;
}
.unit .xxk{
  position: relative;
  float: left;
  padding: 4px 14px;
  padding-right: 20px;
  margin-right: 10px;
  font-size: 12px;
  /* 图片使用base64编码 */
  background: rgb(241, 240, 240) url(data:image/png;base64,);
  background-size: 12px 12px;
  background-repeat: no-repeat;
  background-position: 94% center;
}
.unit .xxk.cur{
  background-color: white;
  border:1px solid #ccc;
}
.unit .xxk.cur::before{
  position: absolute;
  content: '';
  width: 100%;
  height: 10px;
  background-color: white;
  bottom: -10px;
  left: -1px;
  border: 1px solid #ccc;
  border-top: none;
  border-bottom: none;
}
.menu{
  position: fixed;
  top: 61px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: 9999;
}
.menu .mask{
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  z-index: 1;
}
.menu .menu_inner_box{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 140px;
  background: white;
  z-index: 2;
}
.carpic{
  width: 150px;
  height: 100px;
}
.car_grid{
  width: 95%;
  padding: 10px;
  display: flex;
}
.picbox{
  width: 150px;
  height: 100px;
}
.wordbox{
  flex: 1;
  padding-left: 20px;
  font-size: 14px;
  color: rgb(100, 97, 97);
}
