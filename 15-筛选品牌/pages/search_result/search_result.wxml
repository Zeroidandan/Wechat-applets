<!--pages/search_result/search_result.wxml-->
<view>
  <view class="topbox">
    <!-- 筛选 -->
    <van-button class="sx_btn" size="small" bind:click="showPopup">筛选</van-button>
    <van-popup show="{{ show }}" bind:close="onClose" position="right">
      <view style="height:{{windowHeight}}px;width:280px">
        <drawer_inner bind:ok="drawer_inner_han"></drawer_inner>
      </view>
    </van-popup>
  </view>
  <!-- 定义小汽车模板 -->
  <template name="car_grid">
    <view class="car_grid">
      <view class="picbox">
         <!-- <image class="carpic" src=" http://aiqianduan.com:7897/images/carimages_small/{{item.id}}/view/{{item.img}}"></image> -->
         <image class="carpic" src=" http://aiqianduan.com:7897/images/carimages/{{item.id}}/view/{{item.img}}"></image>
      </view>
      <view class="wordbox">
        <view>【id】{{item.id}}</view>
        <view>【品牌】{{item.brand}}</view>
        <view>【价格】{{item.price}}</view>
        <view>【颜色】{{item.color}}</view>
        <view>【排放】{{item.exhaust}}</view>
      </view>
    </view>
  </template>
  <!-- 滚动 -->
  <scroll-view scroll-y="{{true}}" style="height:{{windowHeight -61}}px" bindscrolltolower="lowerHandler" lower-threshold="{{140}}">
    <template is="car_grid" wx:for="{{results}}" wx:key="id" data="{{item:item}}"></template>
    <view style="text-algin:center;margin:20px 0px;">数据拉取到底，没有更多了！！！</view>
  </scroll-view>
</view>