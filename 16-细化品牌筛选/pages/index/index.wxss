.page{
    display: flex;
    /* 小程序中无法写height：100%，js解决高度问题 */
}
.sidebar{
    width: 80px;
    background-color: rgb(230, 143, 238);
}
.lm{
    height: 40px;
    line-height: 40px;
    text-align: center;
    font-size:14px;
    color: white;
}
.lm.cur{
    background: white;
    border-left: 5px solid rgb(238, 95, 130);
    color: black;
}
.maincon{
    flex: 1;
    padding-left: 10px;
    /* background-color: brown; */
}
.title{
    font-size: 16px;
    font-weight: bold;
    color: rgb(240, 70, 149);
    text-align: center;
    height: 40px;
    line-height: 40px;
}
.pbox{
    width: 95%;
    height: 120px;
    display: flex;
    box-shadow: 0px 0px 5px rgba(0, 0, 0,0.15);
    border-radius: 6px;
    margin: 0 auto;
    margin-bottom: 10px;
    overflow: hidden;
    padding: 10px;
    box-sizing: border-box;
}
/* .picbox{} */
.picbox image{
    width: 100px;
    height: 100px;
}
.wordbox{
    flex: 1;
    text-align: right;
    font-size: 14px;
}