<!-- 双向绑定（受控） -->
<!-- 颜色显示器 -->
<view class="box" style="background-color:rgb({{r}},{{g}},{{b}})"></view>

<view class="row">
    <!-- 颜色值进度条   bindchange：绑定改变事件的事件监听 -->
    <slider class="tiao" min="0" max="255" value="{{r}}" bindchange="changeR"></slider>
    <!-- 颜色值输入框   bindinput:当框正在被输入的时候做的事情-->
    <input class="kuang" value="{{r}}" bindinput="changeR"></input>
</view>
<view class="row">
    <slider class="tiao" min="0" max="255" value="{{g}}" bindchange="changeG"></slider>
    <input class="kuang" value="{{g}}" bindinput="changeG"></input>
</view>
<view class="row">
    <slider class="tiao" min="0" max="255" value="{{b}}" bindchange="changeB"></slider>
    <input class="kuang" value="{{b}}" bindinput="changeB"></input>
</view>