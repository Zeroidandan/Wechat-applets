.header{
    width: 100%;
    height: 100px;
    background: rgb(12, 189, 6);
    display: flex;
}
.left{
    flex: 1;
}
.left1{
    color: white;
    font-size: 18px;
    text-align: center;
    line-height: 50px;
}
.left2{
    color: white;
    font-size: 20px;
    text-align: center;
    line-height: 10px;
    font-weight: bold;
}
.right{
    flex: 1;
}
.picker{
    white-space: 100%;
    height: 40px;
    line-height: 40px;
    border-bottom: 1px solid rgb(197, 201, 197);
    font-size: 16px;
    margin-left: 15px;
    position: relative;
}
.weui-input{
    position: absolute;
    top: 10px;
    left: 35%;
}
.unit{
    position: absolute;
    top: 0px;
    right: 10px;
    color: rgb(115, 119, 115);
}